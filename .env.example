# Environment Configuration Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file to version control

# ============================================================================
# ALPACA API (Broker for Live/Paper Trading)
# ============================================================================
# Get your keys from: https://app.alpaca.markets/paper/dashboard/overview
# Paper Trading: https://paper-api.alpaca.markets
# Live Trading: https://api.alpaca.markets

ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================================================
# OPENAI API (For ChatGPT Integration)
# ============================================================================
# Get your key from: https://platform.openai.com/api-keys

OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# GOOGLE CLOUD API (For Cloud Services)
# ============================================================================
# Get your key from: https://console.cloud.google.com/apis/credentials

GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# ============================================================================
# N8N API (Workflow Automation)
# ============================================================================
# Get your key from your N8N instance

N8N_API_KEY=your_n8n_api_key_here
N8N_BASE_URL=your_n8n_instance_url_here

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Risk management
MAX_POSITION_SIZE_PCT=2.0  # Max 2% of capital per trade
MAX_DAILY_LOSS_USD=5000.0  # Max $5k daily loss
MAX_PORTFOLIO_LEVERAGE=1.0  # No leverage by default

# Execution settings
DEFAULT_CAPITAL=100000.0  # Default capital for paper trading
ORDER_TIMEOUT_SECONDS=60  # Order timeout
ENABLE_SLIPPAGE_SIMULATION=true  # Simulate slippage in paper mode

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_FILE_PATH=logs/gnosis.log

# ============================================================================
# DATA SOURCES
# ============================================================================

# Public.com API (Primary market data source)
# Get your key from: https://public.com/api
PUBLIC_API_SECRET=your_public_api_secret_here

# IEX Cloud (Backup market data source)
# Get your key from: https://iexcloud.io/console/tokens
IEX_API_TOKEN=your_iex_api_token_here

# FRED API (Economic data)
# Get your key from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# Reddit API (Sentiment data from r/wallstreetbets)
# Get your credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=DHPE/1.0

# Database (optional - for persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/gnosis_db

# Redis (optional - for caching)
# REDIS_URL=redis://localhost:6379/0
